/* было: flex-wrap: wrap; и фиксированный width у карточек */
.gauges-container{
  flex: 1 1 auto;
  display: flex;
  gap: 16px;
  align-items: flex-start;
  justify-content: center;
  padding: 8px 10px;
  box-sizing: border-box;
  flex-wrap: nowrap;         /* ВАЖНО: не переносить карточки */
  overflow-x: auto;          /* если экран узкий — аккуратный горизонтальный скролл */
  min-width: 0;              /* не раздувать контейнер */
}

/* Сними жёсткий width у карточек и сделай гибкую базу */
.gauge-card,
.summary-card{
  /* УДАЛИ или закомментируй прежний width: ... */
  /* width: 320px; или width: clamp(...); */

  flex: 1 1 280px;           /* делятся местом поровну, могут сжиматься до ~280px */
  min-width: 260px;          /* ниже — уже не сжимать (чтобы не ломался контент) */
  max-width: 520px;          /* верхняя граница (необязательно) */

  background:#222;
  border-radius:12px;
  padding:12px 16px 8px;
  box-shadow:0 2px 10px rgba(0,0,0,.35);
}
.rating-container{
  /* УБРАТЬ: float:left; */
  float: none;               /* или просто удалить строку с float */
  flex: 0 0 260px;           /* фиксированная колонка слева */
  width: auto;               /* ширину больше не задаём вручную */
}
